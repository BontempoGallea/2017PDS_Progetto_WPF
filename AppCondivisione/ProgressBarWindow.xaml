<Window x:Class="AppCondivisione.ProgressBarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppCondivisione"
        mc:Ignorable="d"
        Title="" Width="400" Height="150"
        ContentRendered="Window_ContentRendered" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ProgressBar 
            Grid.Row="1"
            Height="30"
            Minimum="0" 
            Maximum="100" 
            Name="pbStatus" />
        <TextBlock Grid.Row="1" Text="{Binding ElementName=pbStatus, Path=Value, StringFormat={}{0:0}%}" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <TextBlock Grid.Row="3" Name="Time" HorizontalAlignment="Right" Margin="0,30,169.2,-13.2" TextWrapping="Wrap" Text="Tempo residuo" VerticalAlignment="Top" Width="180"/>
    </Grid>
</Window>
