<Window x:Class="AppCondivisione.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppCondivisione"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800">
    <Grid Margin="0,0,0.2,-0.2" Height="423" VerticalAlignment="Bottom">
        <Grid.ColumnDefinitions >

            <ColumnDefinition Width="64*"/>
            <ColumnDefinition Width="95*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

            <RowDefinition Height="100*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="100*"/>

        </Grid.RowDefinitions>
        <TextBlock Margin="52,0,0,9.6" TextWrapping="Wrap" Text="Credenziali" VerticalAlignment="Bottom" Height="13" HorizontalAlignment="Left" Width="95"/>
        <TextBlock HorizontalAlignment="Left" Margin="51,19.6,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Cognome" VerticalAlignment="Top" Height="23" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="52,0,0,10.2" Grid.Row="3" TextWrapping="Wrap" Text="Dove salvare?" VerticalAlignment="Bottom" Height="23" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="30,0,0,69.2" Grid.Row="5" TextWrapping="Wrap" Text="Salvataggio automatico dei file?" VerticalAlignment="Bottom" Height="30" Width="202"/>
        <TextBox HorizontalAlignment="Right" Height="23" Margin="0,18.4,289.2,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="52,19.4,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Height="23" Width="120"><Run Text="Nome"/><LineBreak/><Run/></TextBlock>
        <TextBox HorizontalAlignment="Right" Height="23" Margin="0,18.6,289.2,0" Grid.Row="2" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Button Content="Button" Margin="185,0,0,11.2" Grid.Row="4" VerticalAlignment="Bottom" Height="20" Grid.Column="1" HorizontalAlignment="Left" Width="75" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Right" Margin="0,0,67,18.2" Grid.Row="4" TextWrapping="Wrap" Text="Path" VerticalAlignment="Bottom" Height="13" Width="202"/>
        <RadioButton Content="Si" HorizontalAlignment="Left" Margin="30,0,0,48.2" Grid.Row="5" VerticalAlignment="Bottom" Checked="RadioButton_Checked" Height="16" Width="28"/>
        <RadioButton Content="No" HorizontalAlignment="Left" Margin="30,0,0,28.2" Grid.Row="5" VerticalAlignment="Bottom" Checked="RadioButton_Checked" Height="15" Width="35"/>
        <Ellipse Name="Ellipse" Height="100" Width="100" Grid.Column="1" Margin="0,10,170.2,0" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Ellipse.Fill>
                <ImageBrush ImageSource="/img.jpg"/>
            </Ellipse.Fill>
        </Ellipse>

    </Grid>
</Window>

