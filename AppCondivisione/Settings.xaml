<Window x:Class="AppCondivisione.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppCondivisione"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800">
    <Grid Margin="0,0,0.2,-0.2" Height="423" VerticalAlignment="Bottom">
        <Grid.ColumnDefinitions >

            <ColumnDefinition Width="64*"/>
            <ColumnDefinition Width="95*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

            <RowDefinition Height="100*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="100*"/>

        </Grid.RowDefinitions>
        
        <TextBlock 
            Margin="52,0,0,9.6" 
            TextWrapping="Wrap" 
            Text="Credenziali" 
            VerticalAlignment="Bottom" 
            Height="13" Width="95"
            HorizontalAlignment="Left" />
        <TextBlock 
            HorizontalAlignment="Left" 
            Margin="51,19.6,0,0" 
            Grid.Row="2" 
            TextWrapping="Wrap" 
            Text="Cognome" 
            VerticalAlignment="Top" 
            Height="23" Width="120"/>
        <TextBlock 
            HorizontalAlignment="Left" 
            Margin="52,0,0,10.2" 
            Grid.Row="3" 
            TextWrapping="Wrap" 
            Text="Dove salvare?" 
            VerticalAlignment="Bottom" 
            Height="23" Width="120"/>
        <TextBlock 
            Margin="30,0,88,69.2" 
            Grid.Row="5" 
            TextWrapping="Wrap" 
            Text="Salvataggio automatico dei file?" 
            VerticalAlignment="Bottom" 
            Height="30"/>
        <TextBox 
            HorizontalAlignment="Right" 
            Height="23" Width="120" 
            Margin="0,18.4,289.2,0" 
            Grid.Row="1" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Grid.Column="1" 
            Text="{Binding Path=Name}"/>
        <TextBlock 
            HorizontalAlignment="Left" 
            Margin="52,19.4,0,0" 
            Grid.Row="1" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Height="23" Width="120">
            <Run Text="Nome"/><LineBreak/>
            <Run/>
        </TextBlock>
        <TextBox 
            HorizontalAlignment="Right" 
            Height="23" 
            Margin="0,18.6,289.2,0" 
            Grid.Row="2" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="120" 
            Grid.Column="1" 
            Text="{Binding Path=Surname}"/>
        <Button 
            Content="Seleziona" 
            Margin="185,0,0,11.2" 
            Grid.Row="4" 
            VerticalAlignment="Bottom" 
            Height="20" 
            Grid.Column="1" 
            HorizontalAlignment="Left" 
            Width="75"
            Click="BrowseButton_Click">
            <Button.Resources>
            <Style TargetType="{x:Type Border}">
                <Setter Property="CornerRadius" Value="10"/>
            </Style>
        </Button.Resources>
           </Button>
        <TextBlock 
            Name="DestinationPath" 
            Margin="0,0,67,18.2" 
            Grid.Row="4" 
            TextWrapping="Wrap" 
            Text="{Binding Path=SavePath}" 
            VerticalAlignment="Bottom" 
            Height="13" Width="202"/>
        <RadioButton 
            Name="Si" Content="Si" 
            Margin="30,0,231,48.2" 
            Grid.Row="5" 
            VerticalAlignment="Bottom" 
            IsChecked="{Binding Path=AutomaticSave}"
            Checked="RadioButton_Checked" 
            Height="16"/>
        <RadioButton 
            Name="No" Content="No" 
            Margin="30,62.8,231,28.2" 
            Grid.Row="5" 
            IsChecked="{Binding Path=NotAutomaticSave}"
            Checked="RadioButton_Checked"/>
        <Ellipse Name="Ellipse" Height="72" Width="76" Grid.Column="1" Margin="0,10,170.2,0" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Ellipse.Fill>
                <ImageBrush ImageSource="/img.jpg"/>
            </Ellipse.Fill>
        </Ellipse>

        <Button 
            Name="SalvaModifiche"
            Content="Salva"
            Click="SalvaModifiche_OnClick"
            Grid.Column="1"
            Grid.Row="5"
            VerticalAlignment="Top" 
           Height="30" Margin="282,27.8,85.2,0">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
        <!--bottone che permetta di stoppare l'invio del file-->
        <Button 
            Content="Annulla" 
            Click="Annulla_OnClick"
            HorizontalAlignment="Right"
            Grid.Column="1"
            Grid.Row="5"
            VerticalAlignment="Center" 
            Width="94"
            Height="30" Margin="0,27.8,277.2,48.2">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>



    </Grid>
</Window>

